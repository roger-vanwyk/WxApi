<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

<!--    LAYOUT REPRESENTS A SINGLE LIST ITEM-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<!--        Last updated date-->
        <TextView
            android:id="@+id/detailDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="01.01.2021" />

<!--        Icon based on weather condition-->
        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/clear" />

<!--        Temperature minimum text-->
        <TextView
            android:id="@+id/detailMinimumDegreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="12°" />

        <!--        Temperature maximum text-->
        <TextView
            android:id="@+id/detailMaximumDegreeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="39°" />
    </LinearLayout>
</androidx.cardview.widget.CardView>